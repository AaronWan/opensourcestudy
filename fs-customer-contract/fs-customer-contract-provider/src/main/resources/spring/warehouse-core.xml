<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
         http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="contractMongoDBTemplate" class="com.github.mongo.support.MongoDataStoreFactoryBean"
          p:configName="${contract_mongo_config_name}">
    </bean>

    <bean id="contractStorage" class="com.facishare.contract.core.storage.impl.ContractStorageImpl">
        <property name="datastoreExt" ref="contractMongoDBTemplate"></property>
    </bean>

    <bean id="contractService" class="com.facishare.contract.core.service.impl.ContractServiceImpl">
    </bean>

    <bean id="contractProcessor" class="com.facishare.contract.core.service.impl.ContractZipDealProcessorImpl" p:configName="${contract_zip_deal_task_config}">
    </bean>
    <bean class="com.facishare.contract.common.log.LoggerLevelConfig" p:configName="${contract_logger_config}"></bean>

</beans>